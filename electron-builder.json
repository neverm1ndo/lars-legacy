{
  "productName": "LARS",
  "copyright": "MIT Â© 2022 ${author}",
  "appId": "ru.nmnd.lars",
  "publish": {
    "provider": "github",
    "owner": "neverm1ndo",
  },
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "nsis": {
    "installerIcon": "dist/assets/icons/favicon.ico",
    "uninstallerIcon": "dist/assets/icons/favicon_u.ico",
    "installerHeaderIcon": "dist/assets/icons/favicon.ico",
    "installerSidebar": "build/installerSidebar.bmp",
    "uninstallerSidebar": "build/uninstallerSidebar.bmp",
    "uninstallDisplayName": "${productName} ${version}",
    "license": "LICENSE.md",
    "installerLanguages": ["ru_RU", "en_US"],
    "allowToChangeInstallationDirectory": true,
    "runAfterFinish": true,
    "oneClick": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "win": {
    "icon": "dist/assets/icons/favicon.ico",
    "target": [
      "nsis"
    ]
  }
}
